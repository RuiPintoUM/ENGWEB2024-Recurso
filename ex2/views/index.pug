<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Publish Date</th>
        <th>Pages</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
        <tr>
          <td><a href="/livros/<%= book._id %>"><%= book._id %></a></td>
          <td><%= book.title %></td>
          <td><a href="/livros/author/<%= book.author[0] %>"><%= book.author[0] %></a></td>
          <td><%= book.publishDate %></td>
          <td><%= book.pages %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
